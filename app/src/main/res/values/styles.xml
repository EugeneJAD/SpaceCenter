<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1A237E</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:titleTextStyle">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
