<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <!--<item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
    <!--<item name="android:windowTranslucentStatus">true</item>-->

    <style name="WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullWidthView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullScreenView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Tabs -->

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/grey_800</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <!-- Buttons -->

    <style name="Button.Standard" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/screen_edge_margin</item>
        <item name="android:paddingEnd">@dimen/screen_edge_margin</item>
    </style>

    <style name="Button.RateDialog" parent="Button.Standard">
        <item name="android:background">@drawable/read_button_bg</item>
    </style>

    <!-- Text -->

    <style name="Text.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
