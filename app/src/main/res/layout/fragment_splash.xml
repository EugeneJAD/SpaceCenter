<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.eugene.spacecenter.ui.splash.SplashFragmentViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        style="@style/FullScreenView"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/background"
            style="@style/FullScreenView"
            app:imageFromResCC="@{vm.backgroundResId}"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/background_gradient"
            style="@style/FullScreenView"
            app:srcCompat="@drawable/splash_bg_gradient"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cosmonaut"
            style="@style/LogoSplash"
            app:imageFromRes="@{vm.cosmonautResId}"/>

    </android.support.design.widget.CoordinatorLayout>

</layout>
