<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eugene.spacecenter.ui.asteroids.AsteroidsActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/no_internet_connection_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:textColor="@color/textColor"
        android:gravity="center"/>

    <TextView
        android:id="@+id/no_information_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_information_found"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:visibility="gone"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/apod_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>
